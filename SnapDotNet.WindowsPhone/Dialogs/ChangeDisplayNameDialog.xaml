<ContentDialog
    x:Class="SnapDotNet.Apps.Dialogs.ChangeDisplayNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CHANGE DISPLAY NAME"
    PrimaryButtonText="change"
    SecondaryButtonText="cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<TextBox x:Name="DisplyNameTextBox" Header="new display name"/>

		<!-- Content body -->
		<TextBlock Style="{StaticResource MessageDialogContentStyle}" TextWrapping="Wrap">
			<Run Text="Changing this will change how your friend's name displayed in the application. It will not change his account in anyway." />
			<LineBreak />
			<LineBreak />
			<Run Text="To remove a display name, just change it to an empty name." />
			<LineBreak />
			<LineBreak />
			<Run Text="This can be un-done or changed at any time." />
		</TextBlock>
	</StackPanel>
</ContentDialog>
