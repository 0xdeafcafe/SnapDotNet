<UserControl 
	x:Class="ColdSnap.Controls.ProgressGlobe"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="480" d:DesignWidth="480">

	<Grid Background="Transparent">
		<Ellipse Name="BackgroundEllipse"/>
		<Path Name="ProgressPath" StrokeThickness="1.5" Margin="0"/>
		<Ellipse Name="CentralEllipse" RenderTransformOrigin="0.5,0.5">
			<Ellipse.RenderTransform>
				<ScaleTransform ScaleX="0.65" ScaleY="0.65"/>
			</Ellipse.RenderTransform>
		</Ellipse>
	</Grid>
</UserControl>