<ContentDialog
	x:Class="ColdSnap.Dialogs.ChangeDisplayNameDialog"
	x:Uid="ChangeDisplayNameContentDialog"
	
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

	DataContext="{Binding RelativeSource={RelativeSource Self}}"
	
	Title="CHANGE DISPLAY NAME"
	PrimaryButtonText="change"  
	SecondaryButtonText="cancel"
	
	Background="#FF9B55A0">

	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<TextBox x:Uid="ChangeDisplayNameTextBox" x:Name="DisplayNameTextBox" Header="New Display Name" />

		<!-- Content body -->
		<TextBlock Style="{StaticResource MessageDialogContentStyle}" TextWrapping="Wrap">
			<Run x:Uid="DisplayChangeWarningRun1" Text="Changing this will change how your friend's name displayed in the application." />
			<LineBreak />
			<LineBreak />
			<Run x:Uid="DisplayChangeWarningRun2" Text="To remove a display name, just change it to an empty name." />
		</TextBlock>
	</StackPanel>
</ContentDialog>
