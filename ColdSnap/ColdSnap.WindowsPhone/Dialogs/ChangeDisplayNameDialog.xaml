<ContentDialog
	x:Class="ColdSnap.Dialogs.ChangeDisplayNameDialog"
	x:Uid="ChangeDisplayNameContentDialog"
	
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

	DataContext="{Binding RelativeSource={RelativeSource Self}}"
	
	Title="CHANGE DISPLAY NAME"
	PrimaryButtonText="change"  
	SecondaryButtonText="cancel"
	
	RequestedTheme="Dark"
	Background="#FF9B55A0">

	<StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
		<TextBox x:Uid="ChangeDisplayNameTextBox" Header="New Display Name"
				 Text="{Binding Path=NewDisplayName, Mode=TwoWay}"/>

		<!-- Content body -->
		<TextBlock Style="{StaticResource MessageDialogContentStyle}" TextWrapping="Wrap">
			<Run x:Uid="ChangeDisplayNameWarningRun1" Text="Changing this will change how your friend's name displayed in the application." />
			<LineBreak />
			<LineBreak />
			<Run x:Uid="ChangeDisplayNameWarningRun2" Text="To remove a display name, just change it to an empty name." />
		</TextBlock>
	</StackPanel>
</ContentDialog>
