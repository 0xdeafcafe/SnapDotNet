<controls:SnazzyHubSection
	x:Class="ColdSnap.Pages.Sections.ConvoListSection"
	
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:ColdSnap.Controls"
	xmlns:sections="using:ColdSnap.ViewModels.Sections"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	
	AccentColor="#FF3cb2e2"
	HeaderForeground="Transparent"
	Header="{Binding Path=Account.SnapBandwidthSplit, FallbackValue='69 | 69'}">
	
	<d:DesignProperties.DataContext>
		<sections:ConvoListSectionViewModel/>
	</d:DesignProperties.DataContext>
	
	<controls:SnazzyHubSection.HeaderTitleDataTemplate>
		<DataTemplate>
			<controls:StateTextBlock x:Uid="ConvoListSectionHeader"
									 PrimaryText="snapchat" 
									 Foreground="White" 
									 SecondaryText="{Binding}"
									 HorizontalAlignment="Center" VerticalAlignment="Bottom"
									 Margin="0,0,0,5" FontWeight="SemiLight"
									 FontFamily="Segoe WP" 
									 PrimaryFontSize="40"
									 SecondaryMarginCorrection="0,12,0,0"
									 SecondaryFontSize="30" />
		</DataTemplate>
	</controls:SnazzyHubSection.HeaderTitleDataTemplate>
	<controls:SnazzyHubSection.LeftHeaderDataTemplate>
		<DataTemplate>
			<Grid>
				<Button Style="{StaticResource FluidButtonStyle}"
						HorizontalAlignment="Left" VerticalAlignment="Bottom"
						Margin="0,0,0,-3">
					<Grid Width="60" Height="48" RenderTransformOrigin="0.5,0.5">
						<Grid.RenderTransform>
							<CompositeTransform ScaleX="0.5" ScaleY="0.5"/>
						</Grid.RenderTransform>
						<Border Width="60" Height="46" Background="White" CornerRadius="4">
							<Ellipse Stroke="#FF3cb2e2" StrokeThickness="5"
									 Width="24" Height="24" 
									 VerticalAlignment="Center" HorizontalAlignment="Center"/>
						</Border>
					</Grid>
				</Button>
			</Grid>
		</DataTemplate>
	</controls:SnazzyHubSection.LeftHeaderDataTemplate>
	<controls:SnazzyHubSection.RightHeaderDataTemplate>
		<DataTemplate>
			<Grid>
				<Button Style="{StaticResource FluidButtonStyle}"
						HorizontalAlignment="Right" VerticalAlignment="Bottom"
						Margin="0,0,-2,-4" Width="60" Height="60">
					<Viewbox Width="24">
