<controls:SnazzyHubSection
	x:Class="ColdSnap.Pages.Sections.ConvoListSection"
	x:Uid="ConvoListSection"
	
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:ColdSnap.Controls"
	xmlns:sections="using:ColdSnap.ViewModels.Sections"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	
	AccentColor="#FF3cb2e2"
	Header="coldsnap"
>

	<d:DesignProperties.DataContext>
		<sections:ConvoListSectionViewModel/>
	</d:DesignProperties.DataContext>

	<controls:SnazzyHubSection.PrimaryCommands>
	</controls:SnazzyHubSection.PrimaryCommands>

	<controls:SnazzyHubSection.SecondaryCommands>
		<AppBarButton Label="settings..."/>
	</controls:SnazzyHubSection.SecondaryCommands>

	<DataTemplate>
		<StackPanel>
			<TextBlock Foreground="Black">Account data has been deserialized or loaded when username appears below</TextBlock>
			<TextBlock Foreground="Black" Text="{Binding Path=Account.Username}" />

			<Button x:Name="OpenConversationButton" Content="open convo page" 
							BorderBrush="Black" Foreground="Black" 
							Click="OpenConversationButton_OnClick"/>
			<Button x:Name="OpenSettingsButton" Content="open settings" 
							BorderBrush="Black" Foreground="Black" 
							Click="OpenSettingsButton_Click"/>
		</StackPanel>
	</DataTemplate>
</controls:SnazzyHubSection>
