<controls:SnazzyHubSection
	x:Class="ColdSnap.Pages.Sections.ConvoListSection"
	
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:ColdSnap.Controls"
	xmlns:sections="using:ColdSnap.ViewModels.Sections"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	
	AccentColor="#FF3cb2e2" Header="coldsnap">

	<d:DesignProperties.DataContext>
		<sections:ConvoListSectionViewModel/>
	</d:DesignProperties.DataContext>
	
	<DataTemplate>
		<Grid>
			<TextBlock Foreground="Black" Text="{Binding Path=Account.Username}" />

			<Button x:Name="OpenConversationButton" Content="test" 
							BorderBrush="Black" Foreground="Black" 
							Click="OpenConversationButton_OnClick"/>
		</Grid>
	</DataTemplate>
</controls:SnazzyHubSection>
