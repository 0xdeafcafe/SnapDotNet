<controls:SnazzyHubSection
	x:Class="ColdSnap.Pages.Sections.CameraSection"
	x:Uid="CameraSection"
	
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:ColdSnap.Controls"
	xmlns:sections="using:ColdSnap.ViewModels.Sections"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	
	AccentColor="#66333333"
	AppBarClosedDisplayMode="Compact"
>
	
	<d:DesignProperties.DataContext>
		<sections:CameraSectionViewModel/>
	</d:DesignProperties.DataContext>
	
	<controls:SnazzyHubSection.PrimaryCommands>
		<AppBarButton Label="Capture"/>
	</controls:SnazzyHubSection.PrimaryCommands>
	
	<controls:SnazzyHubSection.SecondaryCommands>
		
	</controls:SnazzyHubSection.SecondaryCommands>

	<DataTemplate>
		<Rectangle Fill="Black"/>
	</DataTemplate>
	
</controls:SnazzyHubSection>
