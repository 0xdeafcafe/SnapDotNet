<Page
	x:Class="ColdSnap.Pages.MainPage"
	
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:controls="using:ColdSnap.Controls"
	xmlns:vm="using:ColdSnap.ViewModels"
    mc:Ignorable="d"

	Background="#FFFFFFFF"
>

	<d:DesignProperties.DataContext>
		<vm:MainPageViewModel/>
	</d:DesignProperties.DataContext>

	<controls:SnazzyHub DefaultSectionIndex="1">
		<controls:SnazzyHubSection AccentColor="#FF3cb2e2" Header="coldsnap">
			<DataTemplate>
				<Rectangle Fill="Purple"/>
			</DataTemplate>
		</controls:SnazzyHubSection>

		<controls:SnazzyHubSection AccentColor="#00FFFFFF">
			<DataTemplate>
				<Rectangle Fill="Yellow"/>
			</DataTemplate>
		</controls:SnazzyHubSection>

		<controls:SnazzyHubSection AccentColor="#FF9b55a0" Header="friends">
			<DataTemplate>
				<Rectangle Fill="Black"/>
			</DataTemplate>
		</controls:SnazzyHubSection>
	</controls:SnazzyHub>
</Page>
