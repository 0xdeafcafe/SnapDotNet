<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
	<ControlTemplate x:Key="recieved_opened">
		<Border Width="20" Height="20" CornerRadius="2" BorderBrush="{Binding Converter={StaticResource SnapColourConverter}}" BorderThickness="2" />
	</ControlTemplate>

	<ControlTemplate x:Key="recieved_delivered">
		<Border Width="20" Height="20" CornerRadius="2" Background="{Binding Converter={StaticResource SnapColourConverter}}" />
	</ControlTemplate>

	<ControlTemplate x:Key="sent_opened">
		<Path Width="22" Height="22" Fill="Transparent" Stroke="{Binding Converter={StaticResource SnapColourConverter}, FallbackValue=#e92754}" StrokeLineJoin="Round"
			StrokeThickness="2"
			Data="M 2,2 L 20,11 L 2,20 A 20,20 10 0 0 2,2 L 20,11" />
	</ControlTemplate>

	<ControlTemplate x:Key="sent_delivered">
		<Path Width="22" Height="22" Stroke="{Binding Converter={StaticResource SnapColourConverter}, FallbackValue=#e92754}" 
			Fill="{Binding Converter={StaticResource SnapColourConverter}, FallbackValue=#e92754}" StrokeLineJoin="Round"
			Data="M 2,2 L 20,11 L 2,20 A 20,20 10 0 0 2,2 L 20,11" />
	</ControlTemplate>

	<ControlTemplate x:Key="recieved_downloading">
		<Viewbox>
			<ProgressRing IsActive="True" Background="{x:Null}" RenderTransformOrigin="0.5,0.5">
				<ProgressRing.RenderTransform>
					<CompositeTransform ScaleX="0.357142857" ScaleY="0.357142857"/>
				</ProgressRing.RenderTransform>
			</ProgressRing>
		</Viewbox>
	</ControlTemplate>

	<ControlTemplate x:Key="sent_screenshotted">
		<Grid Width="18" Height="18" Margin="2,2,0,0">
			<Path Width="18" Height="18" Stroke="{Binding Converter={StaticResource SnapColourConverter}, FallbackValue=#e92754}" 
				  Fill="White" StrokeLineJoin="Round"
				  Data="M 1,1 L 16,8 1,15 A 16,15 10 0 0 1,1 L 16,8" RenderTransformOrigin="0.5,0.5" StrokeThickness="1.5" UseLayoutRounding="False"
				  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-4,0,0,0">
				<Path.RenderTransform>
					<CompositeTransform ScaleX="-1.0" ScaleY="1.0"/>
				</Path.RenderTransform>
			</Path>
			<Path Width="18" Height="18" Stroke="White" 
				  Fill="White" StrokeLineJoin="Round"
				  Data="M 1,1 L 16,8 1,15 A 16,15 10 0 0 1,1 L 16,8" RenderTransformOrigin="0.5,0.5" StrokeThickness="1.5" UseLayoutRounding="False"
				  VerticalAlignment="Center" HorizontalAlignment="Center">
				<Path.RenderTransform>
					<CompositeTransform ScaleX="1.2" ScaleY="1.2"/>
				</Path.RenderTransform>
			</Path>
			<Path Width="18" Height="18" Stroke="{Binding Converter={StaticResource SnapColourConverter}, FallbackValue=#e92754}" 
				  Fill="White" StrokeLineJoin="Round"
				  Data="M 1,1 L 16,8 1,15 A 16,15 10 0 0 1,1 L 16,8" StrokeThickness="1.5" UseLayoutRounding="False"
				  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-0.3,-0.4,0,0" />
		</Grid>
	</ControlTemplate>
	
	<ControlTemplate x:Key="recieved_message">
		<Path x:Name="path" Width="21" Height="25" Stroke="#FF3cb2e2" StrokeThickness="2" Margin="0,5,0,0"
			  Fill="#FF3cb2e2" StrokeLineJoin="Round"
			  Data="M 1,1 L 19,1 19,23 13,19 1,19 1,1 19,1">
			<Path.Triggers>
				<EventTrigger RoutedEvent="Path.Loaded">
					<BeginStoryboard>
						<Storyboard>
							<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" RepeatBehavior="Forever" Storyboard.TargetName="path">
								<EasingDoubleKeyFrame KeyTime="0" Value="0"/>
								<EasingDoubleKeyFrame KeyTime="0:0:0.7" Value="1"/>
								<EasingDoubleKeyFrame KeyTime="0:0:1.4" Value="1"/>
								<EasingDoubleKeyFrame KeyTime="0:0:2.1" Value="0"/>
								<EasingDoubleKeyFrame KeyTime="0:0:3" Value="0"/>
							</DoubleAnimationUsingKeyFrames>
						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</Path.Triggers>
		</Path>
	</ControlTemplate>
</ResourceDictionary>
